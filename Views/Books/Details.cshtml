@model BookStore.Models.Book
@{
    ViewData["Title"] = Model.Title;
}

@Html.AntiForgeryToken()

<section class="padding-large">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="image-holder position-relative">
                    <img src="~/images/category1.jpg" class="img-fluid rounded shadow" alt="@Model.Title">
                    <div class="position-absolute top-0 end-0 m-3">
                        @if (Model.StockQuantity <= 0)
                        {
                            <span class="badge bg-danger fs-6">Out of Stock</span>
                        }
                        else if (Model.StockQuantity <= 5)
                        {
                            <span class="badge bg-warning fs-6">Low Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">In Stock</span>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product-info">
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Books")">Books</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                        </ol>
                    </nav>
                    
                    <h1 class="mb-3 fw-bold">@Model.Title</h1>
                    <p class="text-muted mb-3 fs-5">by <span class="fw-semibold">@Model.Author</span></p>
                    
                    <div class="mb-4">
                        <span class="h2 text-primary fw-bold">$@Model.Price.ToString("F2")</span>
                        <span class="badge bg-secondary ms-2 fs-6">@Model.StockQuantity available</span>
                    </div>
                    
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">ISBN:</h6>
                        <p class="text-muted">@Model.ISBN</p>
                    </div>
                    
                    @if (Model.Categories?.Any() == true)
                    {
                        <div class="mb-4">
                            <h6 class="fw-bold mb-2">Categories:</h6>
                            @foreach (var category in Model.Categories)
                            {
                                <span class="badge bg-primary me-1 mb-1">@category.Name</span>
                            }
                        </div>
                    }
                    
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Description:</h6>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                    
                    <div class="d-flex gap-3 mb-4">
                        <form method="post" action="@Url.Action("AddToCart", "Cart")" style="display: inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="bookId" value="@Model.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-primary btn-lg" 
                                    @(Model.StockQuantity <= 0 ? "disabled" : "")>
                                @if (Model.StockQuantity <= 0)
                                {
                                    <i class="fas fa-times me-2">Out of Stock</i>
                                }
                                else
                                {
                                    <i class="fas fa-cart-plus me-2">Add to Cart</i>
                                }
                            </button>
                        </form>
                        <a href="@Url.Action("Index", "Books")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>Back to Books
                        </a>
                    </div>
                    
                    @if (Model.Reviews?.Any() == true)
                    {
                        <div class="reviews-section mt-5">
                            <h5 class="fw-bold mb-3">
                                <i class="fas fa-star text-warning me-2"></i>Customer Reviews
                            </h5>
                            @foreach (var review in Model.Reviews.Take(3))
                            {
                                <div class="card mb-3 shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <strong class="d-block">@review.UserId</strong>
                                                <small class="text-muted">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                                            </div>
                                            <div class="rating text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= review.Rating)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <p class="mb-0">@review.ReviewText</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .product-info {
        padding: 20px 0;
    }
    
    .image-holder img {
        max-height: 500px;
        object-fit: cover;
        width: 100%;
    }
    
    .rating .fas.fa-star {
        color: #ffc107;
    }
    
    .rating .far.fa-star {
        color: #e4e5e9;
    }
    
    .breadcrumb-item a {
        text-decoration: none;
        color: #6c757d;
    }
    
    .breadcrumb-item a:hover {
        color: #0d6efd;
    }
</style>
