@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container min-vh-100 d-flex flex-column justify-content-center align-items-center bg-light">
    <div class="card shadow p-4 rounded" style="max-width: 400px; width: 100%;">
        <h2 class="mb-4 text-center text-primary">@ViewData["Title"]</h2>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p class="text-center mb-4">You are currently logged in.</p>
            <form class="d-flex justify-content-center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger px-4">Logout</button>
            </form>
        }
        else
        {
            <p class="text-center text-success">You have successfully logged out of the application.</p>
            <div class="text-center mt-3">
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Login Again</a>
            </div>
        }
    </div>
</div>
